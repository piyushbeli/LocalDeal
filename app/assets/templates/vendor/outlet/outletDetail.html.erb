<div class="row">
  <div class="col col-md-6 col-md-offset-3">
    <form class="form" role="form" name="outletForm">
      <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" class="form-control" ng-model="outlet.name">
      </div>
      <div class="form-group">
        <label class="control-label">City</label>
        <input id="searchAddress" ng-autocomplete class="form-control" ng-model="outlet.city"
               details="outlet.cityDetail" options="googlePlaceAutoCompleteOptionsCity" autocomplete="off">
      </div>
      <div class="form-group">
        <label class="control-label">Street Address</label>
        <input id="searchAddress" ng-autocomplete class="form-control" ng-model="outlet.street"
               details="outlet.streetDetail" options="googlePlaceAutoCompleteOptionsStreet" autocomplete="off">
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-primary" ng-click="pinOutlet()">Pin on Map</button>
        <h5>You can move the marker to adjust the pin</h5>
      </div>

      <div class="form-group">
        <label class="checkbox" style="margin-left: 20px">
          <input type="checkbox"  ng-model="shouldUseCurrentLocation" ng-change="userCurrentLocation()">
          Use current location to pin on map (If you are currently sitting in your outlet)
        </label>
      </div>

      <div class="form-group">
        <ui-gmap-google-map center="map.center" zoom="15" draggable="true" options="options">
          <ui-gmap-marker fit="true" coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id">
          </ui-gmap-marker>
        </ui-gmap-google-map>
      </div>

      <div class="form-group">
        <label class="control-label">Coordinates</label>
        <input type="number" step="any" class="form-control" ng-model="outlet.latitude" disabled>
        <input type="number" step="any" class="form-control" ng-model="outlet.longitude" disabled>
      </div>
      <div class="form-group">
        <label class="control-label">Address</label>
        <input type="text" class="form-control" ng-model="outlet.address">
      </div>
      <div class="form-group">
        <label class="control-label">Email</label>
        <input type="email" class="form-control" ng-model="outlet.email">
      </div>
      <div class="form-group">
        <label class="control-label">Mobile#</label>
        <input type="number" class="form-control" ng-model="outlet.mobile" maxlength="10" a>
      </div>
      <div class="form-group"></div>
      <div class="form-group">
        <label class="control-label">Landline#</label>
        <input type="number" class="form-control" ng-model="outlet.contactNo">
      </div>

      <div class="form-group">
        <button type="button" class="btn btn-primary" ng-click="save()">Save</button>
        <button type="button" class="btn btn-warning" ng-click="close()">Cancel</button>
      </div>
    </form>
  </div>
</div>
