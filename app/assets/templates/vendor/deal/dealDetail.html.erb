<form role="form">
  <div class="form-group">
    <label class="control-label">Title</label>
    <input type="text" class="form-control" ng-model="deal.title">
  </div>
  <div class="form-group">
    <label class="control-label">Description</label>
    <textarea rows="5" class="form-control" ng-model="deal.description"></textarea>
  </div>
  <div ng-if="deal.isNew()">
    <h3>Select outlets</h3>
    <div class="form-group" ng-repeat="outlet in vendor.outlets">
      <label class="checkbox">
        <input type="checkbox" checklist-model="deal.outlets" checklist-value="outlet.id">
        {{outlet.name}}
      </label>
    </div>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" ng-click="saveDeal()">Save</button>
    <button class="btn btn-calm" ng-click="cancel()">Cancel</button>
  </div>

  <div ng-if="!deal.isNew()">
    <h3>Selected outlets</h3>
    <div class="form-group" ng-repeat="outlet in deal.outlets">
      <div class="row">
        <h4 class="col col-md-4">{{outlet.name}}</h4>
        <a class="col col-md-2" ng-click="removeOutlet(outlet)">Remove</a>
      </div>

    </div>
  </div>
 <div ng-show="!deal.isNew()">
   <h3> Offers</h3>
   <button class="button button-primary" ui-sref="app.dealDetail.newOffer">Create Offer</button>
   <div class="form-group" ng-repeat="offer in deal.offers">
     <span>{{offer.whatYouGet}}</span>
     <button class="button button-primary" ng-click="editOffer(offer)">Edit</button>
   </div>
 </div>
</form>
<div ui-view="offerDetailContent"></div>
