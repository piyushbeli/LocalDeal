<article>
  <div class="container">
    <div class="row">
      <section class="inner-container">
        <div class="deal-create-form">
          <div class="deal-create-form-cont">
            <div class="col-lg-12">
              <div class="main-heading">
                <h2><span class="fa fa-edit"></span>Offer</h2>
              </div>
            </div>
            <div class="deal-no">
              <h2>O1<span>Deal</span></h2>
            </div>
            <div class="col-lg-12">
              <div class="deal-form-inner">
                <div class="form-group">
                  <label>What You Get</label>
                  <input type="text" ng-model="offer.whatYouGet">
                </div>
                <div class="form-group">
                  <label>Fine Prints</label>
                  <textarea rows="5" cols="100%" ng-model="offer.finePrint"></textarea>
                </div>
                <div class="form-group">
                  <label>Instructions</label>
                  <textarea rows="5" cols="100%" ng-model="offer.instruction"></textarea>
                </div>
                <div class="form-group">
                  <label>Start Date</label>
                  <datetimepicker min-date="data.minDate"  max-date="data.maxDate" ng-model="offer.startAt" date-format="dd-MMM-yyyy"></datetimepicker>
                </div>
                <div class="form-group">
                  <label>End Date</label>
                  <datetimepicker min-date="data.minDate"  ng-model="offer.endAt" date-format="dd-MMM-yyyy"></datetimepicker>
                </div>
                <div class="form-group">
                  <label>Expire Date</label>
                  <datetimepicker min-date="data.minDate"  ng-model="offer.expireAt" date-format="dd-MMM-yyyy"></datetimepicker>
                </div>
                <div class="form-group">
                  <label>Offer Type</label>
                  <select ng-model="offer.offerType"
                          ng-options="offerType.name for offerType in data.offerTypes">
                  </select>
                </div>
                <div class="form-group" ng-if="offer.offerType.name == 'FIXED_PERCENT'">
                  <label>Amount</label>
                  <input type="number" ng-model="offer.discount">
                </div>
                <div class="form-group" ng-if="offer.offerType.name == 'SPECIAL_DISCOUNTED_PRICE'">
                  <label>Actual Price</label>
                  <input type="number" ng-model="offer.actualPrice">
                </div>
                <div class="form-group" ng-if="offer.offerType.name == 'SPECIAL_DISCOUNTED_PRICE'">
                  <label>Offered Price</label>
                  <input type="number" ng-model="offer.offeredPrice">
                </div>
                <div class="form-group">
                  <label>Max Coupons</label>
                  <input type="number" ng-model="offer.maxCoupons">
                </div>
                <div class="gen-btn">
                  <a href="javascript:void(0)" ng-click="saveOffer()">Update</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</article>