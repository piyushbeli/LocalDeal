<article>
  <div class="container">
    <div class="row">
      <section class="inner-container">
        <div class="col-lg-12">
          <div class="main-heading">
            <div class="profile-form-container">
              <h2><span class="fa fa-user"></span>{{vendor.name}}</h2>
              <div class="profile-form">
                <div class="profile-row">
                  <label>Name</label>
                  <input class="form-control" type="text" ng-model="vendor.name" placeholder="Name">
                </div>
                <div class="profile-row">
                  <label>Category</label>
                  <select class="form-control" ng-model="vendor.category"
                          ng-options="category.name for category in data.categories">
                  </select>
                </div>
                <div class="profile-row">
                  <label>Mobile</label>
                  <input class="form-control" type="text" ng-model="vendor.mobile" disabled placeholder="Mobile #">
                  <span ng-if="vendor.isVerified" class="bg-success">Verified</span>
                  <a ng-if="!vendor.isVerified" ui-sref="app.verifyMe">Verify Now</a>
                </div>
                <div class="profile-row">
                  <label>Website</label>
                  <input class="form-control" type="text" ng-model="vendor.website" placeholder="Website link">
                </div>
                <div class="profile-row">
                  <label>Facebook Page</label>
                  <input class="form-control" type="text" ng-model="vendor.facebook" placeholder="Facebook page">
                </div>
                <div class="profile-row">
                  <label>Twitter</label>
                  <input class="form-control" type="text" ng-model="vendor.twitter" placeholder="Twitter page">
                </div>
                <div class="profile-row">
                  <label>Instagram</label>
                  <input class="form-control" type="text" ng-model="vendor.instagram" placeholder="Instagram page">
                </div>
                <div class="gen-btn">
                  <a href="javascript:void(0)" ng-click="updateProfile()">Update</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</article>
<div class="row">
  <a ui-sref="app.deals">show deals</a>
</div>
